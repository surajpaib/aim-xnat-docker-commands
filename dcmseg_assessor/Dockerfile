FROM python:3.8

RUN apt update \
    && \
    apt install \
        g++ \
        gcc \
        libxslt-dev \
    && \
    pip install \
        docopt \
        lxml \
        pydicom 

COPY make-dcm-seg-assessor.py /usr/local/bin/make-dcm-seg-assessor.py
RUN chmod +x /usr/local/bin/make-dcm-seg-assessor.py
LABEL org.nrg.commands="[{\"name\": \"make-dcm-seg-assessor\", \"description\": \"Create an RoiCollection assessor from a DICOM dcm-seg scan\", \"label\": \"make-dcm-seg-assessor\", \"info-url\": \"\", \"version\": \"1.1\", \"schema-version\": \"1.0\", \"type\": \"docker\", \"command-line\": \"python /usr/local/bin/make-dcm-seg-assessor.py #SUBJ_ID# #SESS_ID# #SESS_LABEL# #PROJ# /input/#SEG_FILE_NAME# /output/assessor.xml\", \"mounts\": [{\"name\": \"out\", \"writable\": \"true\", \"path\": \"/output\"}, {\"name\": \"in\", \"writable\": \"false\", \"path\": \"/input\"}], \"inputs\": [{\"name\": \"SUBJ_ID\", \"description\": \"Subject ID\", \"type\": \"string\", \"required\": true}, {\"name\": \"SESS_ID\", \"description\": \"Session ID\", \"type\": \"string\", \"required\": true}, {\"name\": \"SESS_LABEL\", \"description\": \"Session Label\", \"type\": \"string\", \"required\": true}, {\"name\": \"PROJ\", \"description\": \"Project\", \"type\": \"string\", \"required\": true}, {\"name\": \"SEG_FILE_NAME\", \"description\": \"Name of DICOM dcm-seg file\", \"type\": \"string\", \"required\": true}], \"outputs\": [{\"name\": \"xml\", \"description\": \"The assessor XML\", \"mount\": \"out\", \"path\": \"assessor.xml\", \"required\": true}, {\"name\": \"dicom-seg\", \"description\": \"The DICOM dcm-seg file\", \"mount\": \"in\", \"required\": true, \"path\": \"#SEG_FILE_NAME#\"}], \"xnat\": [{\"name\": \"make-dcm-seg-assessor-from-dcm-seg-scan\", \"description\": \"Run the make-dcm-seg-assess container from a scan\", \"contexts\": [\"xnat:imageScanData\"], \"external-inputs\": [{\"name\": \"scan\", \"description\": \"dcm-seg scan\", \"type\": \"Scan\", \"required\": true, \"matcher\": \"\"}], \"derived-inputs\": [{\"name\": \"session\", \"type\": \"Session\", \"derived-from-wrapper-input\": \"scan\", \"required\": true, \"load-children\": false}, {\"name\": \"session-id\", \"type\": \"string\", \"derived-from-wrapper-input\": \"session\", \"derived-from-xnat-object-prope